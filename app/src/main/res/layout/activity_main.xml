<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="com.pbluedotsoft.actimeattack.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/car_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#212121"
            android:padding="8dp"
            android:text="Car"
            android:textAlignment="center"
            android:textColor="@color/whiteText"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#111111"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:text=" &#64; "
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/track_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#212121"
            android:padding="8dp"
            android:text="Track"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_padding"
            android:text="Kmh"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/speed_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:padding="@dimen/digits_padding"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/digits_text_large"
            android:typeface="monospace"
            />

        <TextView
            android:id="@+id/topSpeed_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:padding="@dimen/digits_padding"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/digits_text_large"
            android:typeface="monospace"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_padding"
            android:text="Lap"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/laptime_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="@dimen/digits_padding"
            android:text="--:--:---"
            android:textAlignment="center"
            android:textColor="@color/green300"
            android:textSize="@dimen/digits_text_large"
            android:typeface="monospace"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_padding"
            android:text="Last"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/lastlap_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="@dimen/digits_padding"
            android:text="--:--:---"
            android:textAlignment="center"
            android:textColor="@color/amber300"
            android:textSize="@dimen/digits_text_large"
            android:typeface="monospace"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_padding"
            android:text="Best"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/bestlap_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="@dimen/digits_padding"
            android:text="--:--:---"
            android:textAlignment="center"
            android:textColor="@color/indigo300"
            android:textSize="@dimen/digits_text_large"
            android:typeface="monospace"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_padding"
            android:text="Rec"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/recordlap_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="@dimen/digits_padding"
            android:text="--:--:---"
            android:textAlignment="center"
            android:textColor="#8e24aa"
            android:textSize="@dimen/digits_text_large"
            android:typeface="monospace"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingEnd="2dp"
            android:paddingStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="#3F51B5"
                    android:padding="8dp"
                    android:text="Session"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/pause_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minHeight="0dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="pause"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/restart_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minHeight="0dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="restart"
                    android:textSize="14sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/session_empty_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/empty_list_view_description"
                android:padding="48dp"
                android:src="@mipmap/watch_icon"
                android:tint="@color/empty_list_icon_tint"/>

            <ListView
                android:id="@+id/session_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@android:color/holo_blue_dark"
                android:stackFromBottom="true"
                android:textSize="18sp"
                android:typeface="monospace"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="#303F9F"
                    android:padding="8dp"
                    android:text="Database"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/laptime_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="LAPTIME"
                    android:textAlignment="center"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/gap_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="GAP"
                    android:textAlignment="center"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/nlaps_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="LAPS"
                    android:textAlignment="center"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/speed_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="TOP SPEED"
                    android:textAlignment="center"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/layout_database_empty_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/empty_list_view_description"
                android:padding="48dp"
                android:src="@mipmap/database_icon"
                android:tint="@color/empty_list_icon_tint"/>

            <ListView
                android:id="@+id/database_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@android:color/holo_blue_dark"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
