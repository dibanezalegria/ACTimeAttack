<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="com.pbluedotsoft.actimeattack.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/car_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#212121"
            android:padding="4dp"
            android:text="Car"
            android:textAlignment="center"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/small_text"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#111111"
            android:padding="4dp"
            android:text=" &#64; "
            android:gravity="center"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/small_text"
            />

        <TextView
            android:id="@+id/track_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#212121"
            android:padding="4dp"
            android:text="Track"
            android:textAlignment="center"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/small_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_small_padding"
            android:text="Kmh"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/small_text"
            />

        <TextView
            android:id="@+id/speed_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:padding="@dimen/digits_small_padding"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/small_text"
            android:typeface="monospace"
            />

        <TextView
            android:id="@+id/topSpeed_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:padding="@dimen/digits_small_padding"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/small_text"
            android:typeface="monospace"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_small_padding"
            android:text="Lap"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/small_text"
            />

        <TextView
            android:id="@+id/laptime_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="@dimen/digits_small_padding"
            android:text="--:--:---"
            android:textAlignment="center"
            android:textColor="@color/green300"
            android:textSize="@dimen/small_text"
            android:typeface="monospace"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_small_padding"
            android:text="Last"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/small_text"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/lastlap_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="@dimen/digits_small_padding"
            android:text="--:--:---"
            android:textAlignment="center"
            android:textColor="@color/amber300"
            android:textSize="@dimen/small_text"
            android:typeface="monospace"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_small_padding"
            android:text="Best"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/small_text"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/bestlap_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="@dimen/digits_small_padding"
            android:text="--:--:---"
            android:textAlignment="center"
            android:textColor="@color/indigo300"
            android:textSize="@dimen/small_text"
            android:typeface="monospace"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#111111"
            android:padding="@dimen/digits_small_padding"
            android:text="Rec"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/small_text"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/recordlap_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="@dimen/digits_small_padding"
            android:text="--:--:---"
            android:textAlignment="center"
            android:textColor="@color/record"
            android:textSize="@dimen/small_text"
            android:typeface="monospace"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingEnd="2dp"
            android:paddingStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@color/colorPrimary"
                    android:padding="2dp"
                    android:text="Session"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="@dimen/small_text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:id="@+id/pause_toggle_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minHeight="0dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:textOn="ON"
                    android:textOff="OFF"
                    android:textSize="@dimen/xsmall_text"/>

                <Button
                    android:id="@+id/restart_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minHeight="0dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="restart"
                    android:textSize="@dimen/xsmall_text"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/session_empty_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/empty_list_view_description"
                android:padding="48dp"
                android:src="@mipmap/watch_icon"
                android:tint="@color/empty_list_icon_tint"/>

            <ListView
                android:id="@+id/session_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@android:color/holo_blue_dark"
                android:textSize="@dimen/small_text"
                android:typeface="monospace"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@color/colorPrimary"
                    android:padding="2dp"
                    android:text="Database"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="@dimen/small_text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/car_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="CAR"
                    android:gravity="center"
                    android:textColor="#f5f5f5"
                    android:textSize="@dimen/xsmall_text"/>

                <TextView
                    android:id="@+id/laptime_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="LAPTIME"
                    android:gravity="center"
                    android:textColor="#f5f5f5"
                    android:textSize="@dimen/xsmall_text"/>

                <TextView
                    android:id="@+id/gap_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="GAP"
                    android:gravity="center"
                    android:textColor="#f5f5f5"
                    android:textSize="@dimen/xsmall_text"/>

                <TextView
                    android:id="@+id/nlaps_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="LAPS"
                    android:gravity="center"
                    android:textColor="#f5f5f5"
                    android:textSize="@dimen/xsmall_text"/>

                <TextView
                    android:id="@+id/speed_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#111111"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="KMH"
                    android:gravity="center"
                    android:textColor="#f5f5f5"
                    android:textSize="@dimen/xsmall_text"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/database_empty_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/empty_list_view_description"
                android:padding="48dp"
                android:src="@mipmap/database_icon"
                android:tint="@color/empty_list_icon_tint"/>

            <ListView
                android:id="@+id/database_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@android:color/holo_blue_dark"
                android:textSize="@dimen/small_text"
                android:typeface="monospace"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
